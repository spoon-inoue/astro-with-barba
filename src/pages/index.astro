---
import '../layouts/BundleStyles.astro'
import Link from '../components/Link.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title="Welcome to Astro.">
  <meta slot="meta-description" name="description" content="this page is home." />

  <main data-barba="container" data-barba-namespace="home">
    <div>
      <h1>Home page</h1>
      <Link class="link" href="/about">About</Link>
      <Link class="link" href="/demo">Demo</Link>
    </div>
  </main>
</Layout>

<style lang="scss">
  main {
    width: 100%;
    min-height: 100vh;
    display: grid;
    place-items: center;
    background-color: #023;
  }
  h1 {
    font-weight: 400;
    font-size: 4rem;
    color: #fff;
    margin-bottom: 2rem;
  }
  .link {
    margin-inline: auto;
  }
</style>
